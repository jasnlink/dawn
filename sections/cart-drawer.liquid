<div id="cart-drawer-overlay" class="hidden transition-opacity ease-in-out duration-300 fixed top-0 left-0 right-0 bottom-0 bg-black z-20"></div>
<div id="cart-drawer" class="hidden transition-transform ease-in-out duration-300 fixed top-0 right-0 z-30 bg-pink-200 h-full w-full xl:w-[30vw]">
    <div class="flex flex-col h-full">
        <div id="cart-drawer-header" class="shrink bg-pink-300">
            <div class="flex justify-between items-center py-1 px-4">
                <span class="text-3xl text-white font-extrabold">My Bag</span>
                <div role="button" id="cart-close-btn">{% render 'icon-close', class: 'h-6 w-auto fill-white text-white' %}</div>
            </div>
        </div>
        <div data-cart-drawer-state="default" id="cart-drawer-content" class="h-full shrink overflow-auto flex flex-col"></div>
        <div data-cart-drawer-state="loading" class="hidden h-full flex items-center justify-center">
            <span>{% render 'icon-loading', class: 'animate-spin mx-auto h-12 w-12 text-white' %}</span>
        </div>
    </div>
</div>