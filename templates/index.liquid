{%- assign collection_handle = 'frontpage' -%}
{% paginate collections[collection_handle].products by 20 %}
    <div data-paginate-max="{{ paginate.pages }}" class="hidden"></div>
{% endpaginate %}
<div id="main-content" class="container pt-12 pb-16 mx-auto">
    <div data-paginated-products class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-8 gap-y-12"></div>
    <div class="mt-12">
        <button data-paginate-more class="block mx-auto w-fit py-2 px-8 bg-sky-500 text-white font-semibold rounded-md disabled:opacity-75 select-none hover:bg-sky-400 active:bg-sky-600">
            <span data-paginate-state="loading" class="hidden">{% render 'icon-loading', class: 'animate-spin mx-auto h-6 w-6 text-white' %}</span>
            <span data-paginate-state="default">See more</span>
        </button>
    </div>
</div>